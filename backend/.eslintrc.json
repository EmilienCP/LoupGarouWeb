{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
        
        "no-useless-constructor": "off",
        "@typescript-eslint/no-useless-constructor": ["error"]
    }
}
